<div class="container">
  <h1><%= @list.name %></h1>
  <div class="d-flex flex-wrap justify-content-evenly">
    <% @bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "card-img-top" %>
        <div class="card-body">
          <h3 class="card-title"><%= bookmark.movie.title %></h3>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
          <%= link_to "Delete Movie", movie_path(bookmark.movie_id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit %>
  <% end %>

</div>
